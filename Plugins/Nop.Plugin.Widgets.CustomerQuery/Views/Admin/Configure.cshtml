@model ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
    ViewBag.PageTitle = "Customer Query Configuration";
    NopHtml.SetActiveMenuItemSystemName("CustomerQuery.Configuration");

}

<form asp-controller="AdminCustomerQuery" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Plugins.Widgets.CustomerQuery.Configuration")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <section class="content">
        <div class="form-horizontal">
            @* @await Html.PartialAsync("~/Areas/Admin/Views/Shared/_StoreScopeConfiguration.cshtml") *@
            @await Component.InvokeAsync("StoreScopeConfiguration")
            <div class="cards-group">
                <div class="card card-default">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="Enabled_OverrideForStore" asp-input="Enabled" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="Enabled" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="Enabled" />
                                <span asp-validation-for="Enabled"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="DisplayInNavigation_OverrideForStore" asp-input="DisplayInNavigation" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="DisplayInNavigation" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="DisplayInNavigation" />
                                <span asp-validation-for="DisplayInNavigation"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="DisplayInFooter_OverrideForStore" asp-input="DisplayInFooter" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="DisplayInFooter" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="DisplayInFooter" />
                                <span asp-validation-for="DisplayInFooter"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="DisplayInCustomerProfile_OverrideForStore" asp-input="DisplayInCustomerProfile" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="DisplayInCustomerProfile" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="DisplayInCustomerProfile" />
                                <span asp-validation-for="DisplayInCustomerProfile"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>