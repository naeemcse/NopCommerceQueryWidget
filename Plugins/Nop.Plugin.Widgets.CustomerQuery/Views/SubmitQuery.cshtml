@model SubmitQueryModel
@{
    Layout = "_ColumnsOne";
    ViewBag.PageTitle = T("Plugins.Widgets.CustomerQuery.SubmitQuery").Text;
}


<div class="page contact-page">
    <div class="page-title">
        <h1>@T("Plugins.Widgets.CustomerQuery.SubmitQuery")</h1>
    </div>
    <div class="page-body">
        @if (Model.SuccessfullySent)
        {
            <div class="result">
                @Model.Result
            </div>
        }
        else
        {
            <form asp-controller="CustomerQuery" asp-action="SubmitQuery" method="post">
                <div asp-validation-summary="ModelOnly" class="message-error"></div>
                <div class="fieldset">
                    <div class="form-fields">
                        <div class="inputs">
                            <label asp-for="Name" asp-postfix=":"></label>
                            <nop-hint asp-for="Name" />
                            <input asp-for="Name" placeholder="@T("Plugins.Widgets.CustomerQuery.Fields.Name.Hint")" class="name" />
                            <nop-required />
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div class="inputs">
                            <label asp-for="Email" asp-postfix=":"></label>
                            <nop-hint asp-for="Email" />
                            <input asp-for="Email" placeholder="@T("Plugins.Widgets.CustomerQuery.Fields.Email.Hint")" class="email" />
                            <nop-required />
                            <span asp-validation-for="Email"></span>
                        </div>                      
                            <div class="inputs">
                                <label asp-for="Subject" asp-postfix=":"></label>
                            <nop-hint asp-for="Subject" />

                                 <input asp-for="Subject" placeholder="@T("Plugins.Widgets.CustomerQuery.Fields.Subject.Hint")" class="subject" />                               
                                <span asp-validation-for="Subject"></span>
                            </div>                        
                        <div class="inputs">
                            <label asp-for="Message" asp-postfix=":"></label>
                            <nop-hint asp-for="Message" />
                            <textarea asp-for="Message" placeholder="@T("Plugins.Widgets.CustomerQuery.Fields.Message.Hin")" class="message"></textarea>
                            <nop-required />
                            <span asp-validation-for="Message"></span>
                        </div>
                        @if (Model.DisplayCaptcha)
                        {
                            <nop-captcha />
                        }
                    </div>
                </div>
                <div class="buttons">
                    <button type="submit" name="send-email" class="button-1 contact-us-button"> @T("Plugins.Widgets.CustomerQuery.Submit")</button>
                </div>
            </form>
        }
    </div>
</div>



